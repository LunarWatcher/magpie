layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="Automated tests" {
        pane name="Manual ops"
        pane name="Tests" {
            command "bash"
            args "-c" "make -j $(nproc) test"
            cwd "build"
        }
    }
    tab name="Manual tests" {
        pane split_direction="vertical" {
            pane name="Manual ops"
            pane name="Curl"
        }
        pane split_direction="vertical" {
            pane name="Run" {
                cwd "build"
            }
        }
    }
}
